{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2020"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "types": [
      "vite-plugin-pwa/client",
      "node",
      "jest",
      "@testing-library/jest-dom",
      "./src/vite-env.d.ts",
    ],
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@public/*": [
        "public/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "api",
    "jest.setup.js",
    "jest.config.js",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
